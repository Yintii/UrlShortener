<h2 class="container">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "styled-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email, autofocus: true, placeholder: "john@shortener.com", autocomplete: "email" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password" %>
  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
