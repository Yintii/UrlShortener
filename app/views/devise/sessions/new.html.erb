<h2 class="container">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "styled-form"}) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: "john@shortener.com", autocomplete: "email" %>
    <%= f.password_field :password, placeholder: "password", autocomplete: "current-password" %>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
